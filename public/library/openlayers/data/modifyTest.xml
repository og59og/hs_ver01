<?xml version="1.0" encoding="UTF-8"?>
<StyledLayerDescriptor version="1.0.0"
                       xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd"
                       xmlns="http://www.opengis.net/sld"
                       xmlns:ogc="http://www.opengis.net/ogc"
                       xmlns:xlink="http://www.w3.org/1999/xlink"
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- a Named Layer is the basic building block of an SLD document -->
    <NamedLayer>
        <Name>switch_image_style</Name>
        <UserStyle>
            <!-- Styles can have names, titles and abstracts -->
            <Title>Switch Image</Title>
            <Abstract>Switch Image sample style</Abstract>
            <!-- FeatureTypeStyles describe how to render different features -->
            <!-- A FeatureTypeStyle for rendering lines -->
            <FeatureTypeStyle>
                <Rule>
                    <Name>type_01</Name>
                    <Title>switch_01</Title>
                    <Abstract>A solid green line with a 1 pixel width</Abstract>
                    <LineSymbolizer>
                        <Stroke>
                            <CssParameter name="stroke">#04ef2f</CssParameter>
                        </Stroke>
                    </LineSymbolizer>
                </Rule>
            </FeatureTypeStyle>
        </UserStyle>
    </NamedLayer>
</StyledLayerDescriptor>
