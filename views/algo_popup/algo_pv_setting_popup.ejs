
<!-- The Modal -->
<div class="modal" id="pvsetting">
    <div class="modal-dialog">
        <div class="modal-content" >
            <div class="modal-header">
                <button type="button" id="pvModalCloseButton" class="close" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="pvModalLongTitle">PV 조건 설정</h5>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover pv-algorithm-req-modal-table">
                        <thead>
                            <tr>
                                <th>설비 명칭</th>
                                <th>설비 용량(KVA)</th>
                                <th style="width: 30%;">알고리즘 예측 기간</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <input type="hidden" id="pv_equipment_id">
                                    <input type="text" class="form-control" id="pv_equipment_name" readonly>
                                </td>
                                <td>
                                    <input type="text" class="form-control" id="pv_capacity" readonly>
                                    <input type="hidden" id="pv_algo_type">
                                    <input type="hidden" id="pv_pred_date">
                                </td>
                                <td>
                                    <select class="selectpicker form-control" id="pv_algo_type">
                                        <option value="default" selected="selected">-예측 시간-</option>
                                        <option value="1">1일 예측</option>
                                        <option value="2">3일 예측</option>
                                    </select>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="pull-right">
                        <button type="button" class="btn btn-primary" id="predictPVBtn">예측</button>
                    </div>
                </div>
            </div>

                <!--<div id="subsPqmsDiv"></div>-->
            </div>

        </div>
    </div>
</div>
